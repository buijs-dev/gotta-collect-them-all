---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import series from '../../public/database/carddex/series.json';
---
<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <div class="text-xl py-1">Thé most awesome way to track your Pokémon TCG collection.</div>
    <div class="text-5xl font-bold">Gotta Collect Them All!</div>
    <div class="mt-8">
      <!--<a class="btn" href="" target="_blank"> Let's connect!</a>-->
      <!--<a href="" target="_blank" class="btn btn-outline ml-5">Get This template</a>-->
    </div>
  </div>

  {series.index.map((serie)=>
      <div>
          <div class="text-3xl w-full font-bold mb-5">{series[serie].name}</div>
        {series[serie].index.map((setId)=> {
          let set = series[serie].sets[setId]
          return <HorizontalCard
              title={set.name}
              img="/post_img.webp"
              desc="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
              url={`/sets/${set.path}`} ,
              badge="NEW"
          />
        })}
      </div>)}
</BaseLayout>